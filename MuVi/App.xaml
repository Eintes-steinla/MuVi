<Application x:Class="MuVi.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:MuVi"
             xmlns:helpers="clr-namespace:MuVi.Helpers"
             StartupUri="Views/LoginView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--<materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="DeepPurple" SecondaryColor="Lime" />-->

                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />

                <ResourceDictionary Source="/Resources/Themes/DarkPurpleTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <helpers:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
            <helpers:NotZeroToVisibilityConverter x:Key="NotZeroToVisibilityConverter"/>

            <Style TargetType="Window" BasedOn="{StaticResource ModernWindowStyle}"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
