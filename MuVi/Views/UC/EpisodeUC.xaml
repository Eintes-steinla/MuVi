<UserControl x:Class="MuVi.Views.UC.EpisodeUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MuVi.Views.UC"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Filter & Search -->
        <Border Grid.Column="0" 
                        Style="{StaticResource GlassCard}"
                        Padding="20">
            <StackPanel>
                <!-- Search Box -->
                <Grid Margin="0,0,0,20">
                    <TextBox x:Name="txtSearch"
                                   Style="{StaticResource SearchBox}"
                                   />
                </Grid>

                <!-- Divider -->
                <Border Height="1" 
                                Background="#3A3A3A"
                                Margin="0,0,0,20"/>

                <!-- Filter by Status -->
                <TextBlock Text="Trạng thái" 
                                 Style="{StaticResource FormLabel}"/>
                <ComboBox x:Name="cmbStatus"
                                Style="{StaticResource ModernComboBox}"
                                Margin="0,0,0,15"
                                >
                    <ComboBoxItem Content="Tất cả" IsSelected="True"/>
                    <ComboBoxItem Content="Đang chiếu"/>
                    <ComboBoxItem Content="Hoàn thành"/>
                    <ComboBoxItem Content="Sắp chiếu"/>
                </ComboBox>

                <!-- Filter by Type -->
                <TextBlock Text="Loại phim" 
                                 Style="{StaticResource FormLabel}"/>
                <ComboBox x:Name="cmbMovieType"
                                Style="{StaticResource ModernComboBox}"
                                Margin="0,0,0,15"
                                >
                    <ComboBoxItem Content="Tất cả" IsSelected="True"/>
                    <ComboBoxItem Content="Phim lẻ"/>
                    <ComboBoxItem Content="Phim bộ"/>
                </ComboBox>

                <!-- Filter by Year -->
                <TextBlock Text="Năm phát hành" 
                                 Style="{StaticResource FormLabel}"/>
                <ComboBox x:Name="cmbYear"
                                Style="{StaticResource ModernComboBox}"
                                Margin="0,0,0,15"
                                >
                    <ComboBoxItem Content="Tất cả" IsSelected="True"/>
                    <ComboBoxItem Content="2024"/>
                    <ComboBoxItem Content="2023"/>
                    <ComboBoxItem Content="2022"/>
                    <ComboBoxItem Content="2021"/>
                    <ComboBoxItem Content="2020"/>
                </ComboBox>

                <Separator Style="{StaticResource ModernSeparator}"/>

                <!-- Clear Filter Button -->
                <Button 
                              Style="{StaticResource PrimaryButton}"
                              >
                    <StackPanel Orientation="Horizontal"
                                        Margin="10">
                        <Image Source="/Assets/Icons/icons8-refresh-48.png"
                                       Height="19" Width="19"
                                       Margin="0,0,5,0"/>
                        <TextBlock Text="Xóa bộ lọc"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- Right Panel - Data Grid -->
        <Border Grid.Column="2" 
                        Style="{StaticResource GlassCard}"
                        Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Toolbar -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left buttons -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button x:Name="btnAdd"
                                      Style="{StaticResource PrimaryButton}"
                                      Margin="0,0,10,0"
                                      >
                            <StackPanel Orientation="Horizontal"
                                                Margin="7,5">
                                <Image Source="/Assets/Icons/icons8-plus-60.png"
                                               Height="20" Width="20"
                                               Margin="0,0,5,0"/>
                                <TextBlock Text="Thêm mới"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btnDelete"
                                      Style="{StaticResource PrimaryButton}"
                                      Margin="0,0,10,0"
                                      >
                            <StackPanel Orientation="Horizontal"
                                                Margin="7,5">
                                <Image Source="/Assets/Icons/icons8-remove-48.png"
                                               Height="19" Width="19"
                                               Margin="0,0,5,0"/>
                                <TextBlock Text="Xóa"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Right buttons -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="btnRefresh"
                                      Style="{StaticResource PrimaryButton}"
                                      Margin="0,0,10,0"
                                      >
                            <StackPanel Orientation="Horizontal"
            Margin="7,5">
                                <Image Source="/Assets/Icons/icons8-refresh-48.png"
           Height="19" Width="19"
           Margin="0,0,5,0"/>
                                <TextBlock Text="Làm mới"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btnExport"
                                      Style="{StaticResource PrimaryButton}"
                                      >
                            <StackPanel Orientation="Horizontal"
 Margin="7,5">
                                <Image Source="/Assets/Icons/icons8-export-60.png"
Height="19" Width="19"
Margin="0,0,5,0"/>
                                <TextBlock Text="Xuất Excel"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- DataGrid -->
                <DataGrid x:Name="dgData"
                                Grid.Row="1"
                                Style="{StaticResource ModernDataGrid}"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                SelectionMode="Extended"
                                SelectionUnit="FullRow">
                    <DataGrid.Columns>
                        <!-- Checkbox Column -->
                        <DataGridCheckBoxColumn Width="Auto">
                            <DataGridCheckBoxColumn.Header>
                                <CheckBox x:Name="chkSelectAll"
                                                Style="{StaticResource ModernCheckBox}"/>
                            </DataGridCheckBoxColumn.Header>
                        </DataGridCheckBoxColumn>

                        <!-- ID Column -->
                        <DataGridTextColumn Header="ID" 
                                                  Width="100"
                                                  IsReadOnly="True"/>
                        
                        <!-- Movie Column -->
                        <DataGridTextColumn Header="Movie" 
                                                  Width="100"
                                                  IsReadOnly="True"/>

                        <!-- Episode number Column -->
                        <DataGridTextColumn Header="Số tập" 
                                                  Width="100"
                                                  IsReadOnly="True"/>

                        <!-- Tiltle Column -->
                        <DataGridTextColumn Header="Tiêu đề" 
                                                  Width="120"
                                                  IsReadOnly="True"/>

                        <!-- Description Column -->
                        <DataGridTextColumn Header="Mô tả" 
                                                  Width="100"
                                                  IsReadOnly="True"/>

                        <!-- Duration Column -->
                        <DataGridTextColumn Header="Thời lượng" 
                                                  Width="100"
                                                  IsReadOnly="True"/>
                        
                        <!-- Video Path Column -->
                        <DataGridTextColumn Header="Đường dẫn video" 
                                                  Width="100"
                                                  IsReadOnly="True"/>
                        <!-- Release Year Column -->
                        <DataGridTextColumn Header="Năm phát hành" 
                                                  Width="100"
                                                  IsReadOnly="True"/>
                        <!-- View count Column -->
                        <DataGridTextColumn Header="Lượt xem" 
                                                  Width="100"
                                                  IsReadOnly="True"/>

                        <!-- Creat at Column -->
                        <DataGridTextColumn Header="Thời gian tạo" 
                                                  Width="100"
                                                  IsReadOnly="True"/>
                        
                        
                        <!-- Status Column -->
                        <DataGridTextColumn Header="Trạng thái" 
                                                  Width="120"
                                                  IsReadOnly="True"/>

                        <!-- Actions Column -->
                        <DataGridTemplateColumn Header="Thao tác" Width="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="✏️" 
                                                      ToolTip="Chỉnh sửa"
                                                      Style="{StaticResource SecondaryButton}"
                                                      Padding="8,4"
                                                      Margin="2"/>

                                        <Button Content="🗑️" 
                                                      ToolTip="Xóa"
                                                      Style="{StaticResource SecondaryButton}"
                                                      Padding="8,4"
                                                      Margin="2"/>

                                        <Button Content="👁️" 
                                                      ToolTip="Xem chi tiết"
                                                      Style="{StaticResource SecondaryButton}"
                                                      Padding="8,4"
                                                      Margin="2"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Pagination -->
                <Grid Grid.Row="2" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Pagination Buttons -->
                    <StackPanel Grid.Column="1" 
                                      Orientation="Horizontal">
                        <Button x:Name="btnFirstPage"
                                      Style="{StaticResource SecondaryButton}"
                                      Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal"
                                                Margin="5">
                                <Image Source="/Assets/Icons/icons8-start-50.png"
                                               Height="20" Width="20"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btnPrevPage"
                                      Style="{StaticResource SecondaryButton}"
                                      Margin="0,0,0,0"
                                      >
                            <StackPanel Orientation="Horizontal"
                                                Margin="10">
                                <Image Source="/Assets/Icons/icons8-back-48.png"
                                                Height="10" Width="10"/>
                            </StackPanel>
                        </Button>

                        <Button Margin="10,0"
                                        Style="{StaticResource SecondaryButton}">
                            <TextBlock Foreground="{StaticResource TextSecondaryBrush}"
                                               Margin="10,0"/>
                        </Button>

                        <Button x:Name="btnNextPage"
                                      Style="{StaticResource SecondaryButton}"
                                      Margin="0,0,10,0"
                                      >
                            <StackPanel Orientation="Horizontal"
                                                Margin="10">
                                <Image Source="/Assets/Icons/icons8-next-48.png"
                                               Height="10" Width="10"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btnLastPage"
                                      Style="{StaticResource SecondaryButton}"
                                      Margin="0"
                                      >
                            <StackPanel Orientation="Horizontal"
            Margin="5">
                                <Image Source="/Assets/Icons/icons8-end-50.png"
           Height="20" Width="20"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
