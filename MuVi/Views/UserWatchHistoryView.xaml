<UserControl x:Class="MuVi.Views.UserWatchHistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- History Item Template -->
        <DataTemplate x:Key="HistoryItemTemplate">
            <Border Background="{StaticResource BackgroundGradientBrush}"
                    BorderBrush="{StaticResource PrimaryPurpleDarkBrush}"
                    BorderThickness="1"
                    CornerRadius="10"
                    Margin="0,0,0,15"
                    Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Thumbnail -->
                    <Border Grid.Column="0" 
                            Width="120" Height="170"
                            CornerRadius="8"
                            ClipToBounds="True"
                            Margin="0,0,15,0">
                        <Image Source="{Binding Movie.PosterPath}" 
                               Stretch="UniformToFill"/>
                    </Border>

                    <!-- Info -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding DisplayTitle}"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   TextTrimming="CharacterEllipsis"/>

                        <TextBlock Text="{Binding Movie.Description}"
                                   FontSize="13"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextTrimming="CharacterEllipsis"
                                   MaxHeight="40"
                                   TextWrapping="Wrap"
                                   Margin="0,8,0,0"/>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="Xem lúc: " 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="12"/>
                            <TextBlock Text="{Binding WatchedTime}"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontSize="12"
                                       FontWeight="SemiBold"/>
                        </StackPanel>

                        <!-- Progress Bar -->
                        <StackPanel Margin="0,10,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="Tiến độ xem:"
                                           FontSize="11"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding ProgressText}"
                                           FontSize="11"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource MaterialDesignLightSeparatorBackground}"/>
                            </Grid>

                            <ProgressBar Value="{Binding Progress, Mode=OneWay}"
                                         Maximum="100"
                                         Height="6"
                                         Margin="0,5,0,0"
                                         Foreground="{StaticResource BackgroundLightBrush}"
                                         Background="{StaticResource PrimaryPurpleDarkBrush}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="2" 
                                VerticalAlignment="Center"
                                Margin="15,0,0,0">
                        <Button Style="{StaticResource PrimaryButton}"
                                Command="{Binding DataContext.ContinueWatchingCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal"
                                        Margin="10,5">
                                <Image Source="/Assets/Icons/icons8-play-48.png"
                                       Width="20" Margin="0,0,5,0"/>
                                <TextBlock Text="Xem tiếp"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SecondaryButton}"
                                Command="{Binding DataContext.ViewMovieDetailCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}">
                            <StackPanel Orientation="Horizontal" Margin="10,5">
                                <Image Source="/Assets/Icons/icons8-info-white-48.png"
                                        Width="20" Margin="0,0,5,0"/>
                                <TextBlock Text="Chi tiết" Foreground="{StaticResource TextPrimaryBrush}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundGradientBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource BackgroundDarkBrush}"
                Padding="30,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Image Source="/Assets/Icons/icons8-note-100.png"
                           Width="40" Height="40"
                           Margin="0,0,10,0"/>
                    <TextBlock Text="Lịch Sử Xem Phim"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource SecondaryButton}"
                            Command="{Binding LoadDataCommand}"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal"
                                    Margin="10">   
                            <Image Source="/Assets/Icons/icons8-refresh-48.png"
                                   Width="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Làm mới" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SecondaryButton}"
                            Command="{Binding ClearHistoryCommand}"
                            VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal"
                                    Margin="10">
                            <Image Source="/Assets/Icons/icons8-remove-48.png"
                                    Width="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Xóa lịch sử" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1">
            <!-- Loading -->
            <Grid Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                    <TextBlock Text="Đang tải lịch sử xem..."
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="14"
                               Margin="0,15,0,0"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Empty State -->
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Visibility="{Binding HistoryItems.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                <TextBlock Text="📺" FontSize="80" HorizontalAlignment="Center" Opacity="0.3"/>
                <TextBlock Text="Chưa có lịch sử xem"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,10"/>
                <TextBlock Text="Hãy bắt đầu xem phim để lưu lại lịch sử!"
                           FontSize="14"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- History List -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Padding="30,20"
                          Visibility="{Binding HistoryItems.Count, Converter={StaticResource NotZeroToVisibilityConverter}}">
                <ItemsControl ItemsSource="{Binding HistoryItems}"
                              ItemTemplate="{StaticResource HistoryItemTemplate}"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
