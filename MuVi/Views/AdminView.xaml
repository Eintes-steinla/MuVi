<themes:ModernWindowBase x:Class="MuVi.Views.AdminView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:MuVi.Views.UC"
        xmlns:themes="clr-namespace:MuVi.Resources.Themes"
        mc:Ignorable="d"
        Title="MuVi - Quản Lý" 
        Height="900" 
        Width="1600"
        Background="Transparent"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource ModernWindowStyle}">

    <themes:ModernWindowBase.Resources>
        <ResourceDictionary>
            <!-- Fade In Animation -->
            <Storyboard x:Key="FadeInAnimation">
                <DoubleAnimation Storyboard.TargetName="MainContainer"
                               Storyboard.TargetProperty="Opacity"
                               From="0" To="1" 
                               Duration="0:0:0.3"/>
            </Storyboard>
        </ResourceDictionary>
    </themes:ModernWindowBase.Resources>

    <themes:ModernWindowBase.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeInAnimation}"/>
        </EventTrigger>
    </themes:ModernWindowBase.Triggers>

    <Border Background="{StaticResource BackgroundGradientBrush}">
        <Grid x:Name="MainContainer">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Bar -->
            <Border Grid.Row="0" 
                    Background="Transparent"
                    BorderBrush="#2A2A2A"
                    BorderThickness="0,0,0,1">
                <Grid Margin="20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo & Title -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <!-- App Name -->
                        <TextBlock Text="MuVi" 
                                   Style="{StaticResource TitleLabel}"
                                   FontSize="40"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,0">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="{StaticResource PrimaryPurple}" 
                                                  BlurRadius="30" 
                                                  ShadowDepth="0" 
                                                  Opacity="0.8"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>

                </Grid>
            </Border>

            <!-- Tab Control Menu -->
            <Border Grid.Row="1" 
                    Background="Transparent"
                    BorderBrush="#2A2A2A"
                    BorderThickness="0,0,0,1">
                <TabControl x:Name="tabControl"
                          Style="{StaticResource ModernTabControl}"
                          Margin="20,0"
                          SelectionChanged="TabControl_SelectionChanged">
                    <TabItem Style="{StaticResource ModernTabItem}" Tag="User">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/icons8-user-60.png" 
                                       Width="20" Height="20" 
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Người dùng" 
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="15"
                                           FontWeight="Medium"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>
                    <TabItem Style="{StaticResource ModernTabItem}" Tag="Movie">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/icons8-movies-60.png" 
                                       Width="20" Height="20" 
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Phim" 
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="15"
                                           FontWeight="Medium"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>
                    <TabItem Style="{StaticResource ModernTabItem}" Tag="Genre">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/icons8-list-view-60.png" 
                                       Width="20" Height="20" 
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Thể loại" 
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="15"
                                           FontWeight="Medium"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>
                    <TabItem Style="{StaticResource ModernTabItem}" Tag="Episode">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/icons8-series-48.png" 
                                       Width="20" Height="20" 
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Tập phim" 
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="15"
                                           FontWeight="Medium"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>
                    <TabItem Style="{StaticResource ModernTabItem}" Tag="Actor">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/icons8-actor-64.png" 
                                       Width="20" Height="20" 
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Diễn viên" 
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="15"
                                           FontWeight="Medium"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>
                    <TabItem Style="{StaticResource ModernTabItem}" Tag="Country">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/icons8-earth-50.png" 
                                       Width="20" Height="20" 
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Quốc gia" 
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="15"
                                           FontWeight="Medium"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>
                    <TabItem Style="{StaticResource ModernTabItem}" Tag="Favorite">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/icons8-heart-48.png" 
                                       Width="20" Height="20" 
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Yêu thích" 
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="15"
                                           FontWeight="Medium"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>
                    <TabItem Style="{StaticResource ModernTabItem}" Tag="History">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/icons8-history-50.png" 
                                       Width="19" Height="19" 
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Lịch sử" 
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="15"
                                           FontWeight="Medium"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>
                    <TabItem Style="{StaticResource ModernTabItem}" Tag="Review">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/icons8-review-48.png" 
                                       Width="21" Height="21" 
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Đánh giá" 
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="15"
                                           FontWeight="Medium"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>
                    <TabItem Style="{StaticResource ModernTabItem}" Tag="MovieCast">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/icons8-multicultural-people-50.png" 
                                       Width="20" Height="20" 
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Dàn diễn viên" 
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="15"
                                           FontWeight="Medium"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>
                </TabControl>
            </Border>

            <!-- Main Content Area -->
            <Grid  Grid.Row="2" Margin="20">
                <ContentControl x:Name="ContentArea" >
                </ContentControl>
            </Grid>
        </Grid>
    </Border>
</themes:ModernWindowBase>