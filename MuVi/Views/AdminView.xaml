<Window x:Class="MuVi.Views.AdminView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MuVi - Quản Lý" 
        Height="900" 
        Width="1600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.Resources>
        <ResourceDictionary>
            <!-- Fade In Animation -->
            <Storyboard x:Key="FadeInAnimation">
                <DoubleAnimation Storyboard.TargetName="MainContainer"
                               Storyboard.TargetProperty="Opacity"
                               From="0" To="1" 
                               Duration="0:0:0.3"/>
            </Storyboard>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeInAnimation}"/>
        </EventTrigger>
    </Window.Triggers>

    <Border Background="{StaticResource BackgroundGradientBrush}">
        <Grid x:Name="MainContainer">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Bar -->
            <Border Grid.Row="0" 
                    Background="Transparent"
                    BorderBrush="#2A2A2A"
                    BorderThickness="0,0,0,1">
                <Grid Margin="20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo & Title -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <!-- App Name -->
                        <TextBlock Text="MuVi" 
                                   Style="{StaticResource TitleLabel}"
                                   FontSize="40"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,0">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="{StaticResource PrimaryPurple}" 
                                                  BlurRadius="30" 
                                                  ShadowDepth="0" 
                                                  Opacity="0.8"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>

                    <!-- Close Button -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                        <Button x:Name="btnClose"
        HorizontalAlignment="Right" 
        VerticalAlignment="Center"
        Width="36" Height="36"
        Background="Transparent"
        Foreground="{StaticResource TextSecondaryBrush}"
        BorderThickness="0"
        Cursor="Hand"
        Click="btnClose_Click">
                            <Image Source="/Assets/Icons/icons8-close-window-64.png"/>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" 
                              Background="{TemplateBinding Background}"
                              CornerRadius="18">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="Transparent"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Tab Control Menu -->
            <Border Grid.Row="1" 
                    Background="Transparent"
                    BorderBrush="#2A2A2A"
                    BorderThickness="0,0,0,1">
                <TabControl x:Name="tabControl"
                          Style="{StaticResource ModernTabControl}"
                          SelectionChanged="tabControl_SelectionChanged"
                          Margin="20,0">
                    <TabItem Style="{StaticResource ModernTabItem}">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/icons8-movies-60.png" 
                                       Width="25" Height="25" 
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Phim" 
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="15"
                                           FontWeight="Medium"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>
                    <TabItem Style="{StaticResource ModernTabItem}">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/icons8-list-view-60.png" 
                                       Width="25" Height="25" 
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Thể loại" 
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="15"
                                           FontWeight="Medium"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>
                    <TabItem Style="{StaticResource ModernTabItem}">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/icons8-earth-50.png" 
                                       Width="25" Height="25" 
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Quốc gia" 
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="15"
                                           FontWeight="Medium"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>
                    <TabItem Style="{StaticResource ModernTabItem}">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/icons8-series-48.png" 
                                       Width="25" Height="25" 
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Tập phim" 
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="15"
                                           FontWeight="Medium"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>
                    <TabItem Style="{StaticResource ModernTabItem}">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/icons8-user-60.png" 
                                       Width="25" Height="25" 
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Người dùng" 
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="15"
                                           FontWeight="Medium"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>
                    <TabItem Style="{StaticResource ModernTabItem}">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/icons8-heart-48.png" 
                                       Width="25" Height="25" 
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Yêu thích" 
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="15"
                                           FontWeight="Medium"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>
                    <TabItem Style="{StaticResource ModernTabItem}">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/icons8-history-50.png" 
                                       Width="25" Height="25" 
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Lịch sử" 
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="15"
                                           FontWeight="Medium"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>
                    <TabItem Style="{StaticResource ModernTabItem}">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Assets/Icons/icons8-actor-64.png" 
                                       Width="25" Height="25" 
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="Diễn viên" 
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="15"
                                           FontWeight="Medium"/>
                            </StackPanel>
                        </TabItem.Header>
                    </TabItem>
                </TabControl>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Row="2" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel - Filter & Search -->
                <Border Grid.Column="0" 
                        Style="{StaticResource GlassCard}"
                        Padding="20">
                    <StackPanel>
                        <!-- Search Box -->
                        <Grid Margin="0,0,0,20">
                            <TextBox x:Name="txtSearch"
                                   Style="{StaticResource SearchBox}"
                                   TextChanged="txtSearch_TextChanged"/>
                        </Grid>

                        <!-- Divider -->
                        <Border Height="1" 
                                Background="#3A3A3A"
                                Margin="0,0,0,20"/>

                        <!-- Filter by Status -->
                        <TextBlock Text="Trạng thái" 
                                 Style="{StaticResource FormLabel}"/>
                        <ComboBox x:Name="cmbStatus"
                                Style="{StaticResource ModernComboBox}"
                                Margin="0,0,0,15"
                                SelectionChanged="cmbStatus_SelectionChanged">
                            <ComboBoxItem Content="Tất cả" IsSelected="True"/>
                            <ComboBoxItem Content="Đang chiếu"/>
                            <ComboBoxItem Content="Hoàn thành"/>
                            <ComboBoxItem Content="Sắp chiếu"/>
                        </ComboBox>

                        <!-- Filter by Type -->
                        <TextBlock Text="Loại phim" 
                                 Style="{StaticResource FormLabel}"/>
                        <ComboBox x:Name="cmbMovieType"
                                Style="{StaticResource ModernComboBox}"
                                Margin="0,0,0,15"
                                SelectionChanged="cmbMovieType_SelectionChanged">
                            <ComboBoxItem Content="Tất cả" IsSelected="True"/>
                            <ComboBoxItem Content="Phim lẻ"/>
                            <ComboBoxItem Content="Phim bộ"/>
                        </ComboBox>

                        <!-- Filter by Year -->
                        <TextBlock Text="Năm phát hành" 
                                 Style="{StaticResource FormLabel}"/>
                        <ComboBox x:Name="cmbYear"
                                Style="{StaticResource ModernComboBox}"
                                Margin="0,0,0,15"
                                SelectionChanged="cmbYear_SelectionChanged">
                            <ComboBoxItem Content="Tất cả" IsSelected="True"/>
                            <ComboBoxItem Content="2024"/>
                            <ComboBoxItem Content="2023"/>
                            <ComboBoxItem Content="2022"/>
                            <ComboBoxItem Content="2021"/>
                            <ComboBoxItem Content="2020"/>
                        </ComboBox>

                        <Separator Style="{StaticResource ModernSeparator}"/>

                        <!-- Clear Filter Button -->
                        <Button 
                              Style="{StaticResource PrimaryButton}"
                              Click="btnClearFilter_Click">
                            <StackPanel Orientation="Horizontal"
                                        Margin="10">
                                <Image Source="/Assets/Icons/icons8-refresh-48.png"
                                       Height="19" Width="19"
                                       Margin="0,0,5,0"/>
                                <TextBlock Text="Xóa bộ lọc"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Right Panel - Data Grid -->
                <Border Grid.Column="2" 
                        Style="{StaticResource GlassCard}"
                        Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Toolbar -->
                        <Grid Grid.Row="0" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left buttons -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Button x:Name="btnAdd"
                                      Style="{StaticResource PrimaryButton}"
                                      Margin="0,0,10,0"
                                      Click="btnAdd_Click">
                                    <StackPanel Orientation="Horizontal"
                                                Margin="7,5">
                                        <Image Source="/Assets/Icons/icons8-plus-60.png"
                                               Height="20" Width="20"
                                               Margin="0,0,5,0"/>
                                        <TextBlock Text="Thêm mới"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="btnDeleteSelected"
                                      Style="{StaticResource PrimaryButton}"
                                      Margin="0,0,10,0"
                                      Click="btnDeleteSelected_Click">
                                    <StackPanel Orientation="Horizontal"
                                                Margin="7,5">
                                        <Image Source="/Assets/Icons/icons8-remove-48.png"
                                               Height="19" Width="19"
                                               Margin="0,0,5,0"/>
                                        <TextBlock Text="Xóa"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <!-- Right buttons -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button x:Name="btnRefresh"
                                      Style="{StaticResource PrimaryButton}"
                                      Margin="0,0,10,0"
                                      Click="btnRefresh_Click">
                                    <StackPanel Orientation="Horizontal"
            Margin="7,5">
                                        <Image Source="/Assets/Icons/icons8-refresh-48.png"
           Height="19" Width="19"
           Margin="0,0,5,0"/>
                                        <TextBlock Text="Làm mới"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="btnExport"
                                      Style="{StaticResource PrimaryButton}"
                                      Click="btnExport_Click">
                                    <StackPanel Orientation="Horizontal"
 Margin="7,5">
                                        <Image Source="/Assets/Icons/icons8-export-60.png"
Height="19" Width="19"
Margin="0,0,5,0"/>
                                        <TextBlock Text="Xuất Excel"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <!-- DataGrid -->
                        <DataGrid x:Name="dgData"
                                Grid.Row="1"
                                Style="{StaticResource ModernDataGrid}"
                                ItemsSource="{Binding CurrentItems}"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                SelectionMode="Extended"
                                SelectionUnit="FullRow"
                                MouseDoubleClick="dgData_MouseDoubleClick">
                            <DataGrid.Columns>
                                <!-- Checkbox Column -->
                                <DataGridCheckBoxColumn Width="Auto" 
                                                      Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}">
                                    <DataGridCheckBoxColumn.Header>
                                        <CheckBox x:Name="chkSelectAll"
                                                Style="{StaticResource ModernCheckBox}"
                                                Checked="chkSelectAll_Checked"
                                                Unchecked="chkSelectAll_Unchecked"/>
                                    </DataGridCheckBoxColumn.Header>
                                </DataGridCheckBoxColumn>

                                <!-- ID Column -->
                                <DataGridTextColumn Header="ID" 
                                                  Binding="{Binding ID}" 
                                                  Width="80"
                                                  IsReadOnly="True"/>

                                <!-- Title/Name Column -->
                                <DataGridTextColumn Header="Tiêu đề" 
                                                  Binding="{Binding Title}" 
                                                  Width="*"
                                                  IsReadOnly="True"/>

                                <!-- Type Column -->
                                <DataGridTextColumn Header="Loại" 
                                                  Binding="{Binding Type}" 
                                                  Width="120"
                                                  IsReadOnly="True"/>

                                <!-- Year Column -->
                                <DataGridTextColumn Header="Năm" 
                                                  Binding="{Binding Year}" 
                                                  Width="100"
                                                  IsReadOnly="True"/>

                                <!-- Rating Column -->
                                <DataGridTextColumn Header="Đánh giá" 
                                                  Binding="{Binding Rating}" 
                                                  Width="100"
                                                  IsReadOnly="True"/>

                                <!-- Status Column -->
                                <DataGridTextColumn Header="Trạng thái" 
                                                  Binding="{Binding Status}" 
                                                  Width="120"
                                                  IsReadOnly="True"/>

                                <!-- Actions Column -->
                                <DataGridTemplateColumn Header="Thao tác" Width="180">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Content="✏️" 
                                                      ToolTip="Chỉnh sửa"
                                                      Style="{StaticResource SecondaryButton}"
                                                      Padding="8,4"
                                                      Margin="2"
                                                      Click="btnEdit_Click"
                                                      Tag="{Binding}"/>

                                                <Button Content="🗑️" 
                                                      ToolTip="Xóa"
                                                      Style="{StaticResource SecondaryButton}"
                                                      Padding="8,4"
                                                      Margin="2"
                                                      Click="btnDelete_Click"
                                                      Tag="{Binding}"/>

                                                <Button Content="👁️" 
                                                      ToolTip="Xem chi tiết"
                                                      Style="{StaticResource SecondaryButton}"
                                                      Padding="8,4"
                                                      Margin="2"
                                                      Click="btnView_Click"
                                                      Tag="{Binding}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Pagination -->
                        <Grid Grid.Row="2" Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Pagination Buttons -->
                            <StackPanel Grid.Column="1" 
                                      Orientation="Horizontal">
                                <Button x:Name="btnFirstPage"
                                      Style="{StaticResource SecondaryButton}"
                                      Click="btnFirstPage_Click"
                                      Margin="0,0,10,0">
                                    <StackPanel Orientation="Horizontal"
                                                Margin="5">
                                        <Image Source="/Assets/Icons/icons8-start-50.png"
                                               Height="20" Width="20"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="btnPrevPage"
                                      Style="{StaticResource SecondaryButton}"
                                      Margin="0,0,0,0"
                                      Click="btnPrevPage_Click">
                                    <StackPanel Orientation="Horizontal"
                                                Margin="10">
                                        <Image Source="/Assets/Icons/icons8-back-48.png"
                                                Height="10" Width="10"/>
                                    </StackPanel>
                                </Button>

                                <Button Margin="10,0"
                                        Style="{StaticResource SecondaryButton}">
                                    <TextBlock Text="{Binding btnPageInfo}" 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               Margin="10,0"/>
                                </Button>

                                <Button x:Name="btnNextPage"
                                      Style="{StaticResource SecondaryButton}"
                                      Margin="0,0,10,0"
                                      Click="btnNextPage_Click">
                                    <StackPanel Orientation="Horizontal"
                                                Margin="10">
                                        <Image Source="/Assets/Icons/icons8-next-48.png"
                                               Height="10" Width="10"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="btnLastPage"
                                      Style="{StaticResource SecondaryButton}"
                                      Margin="0"
                                      Click="btnLastPage_Click">
                                    <StackPanel Orientation="Horizontal"
            Margin="5">
                                        <Image Source="/Assets/Icons/icons8-end-50.png"
           Height="20" Width="20"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>