<UserControl x:Class="MuVi.Views.UserMovieListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Movie Grid Item Template -->
        <DataTemplate x:Key="MovieGridTemplate">
            <Border Width="200" Height="320" Margin="10"
                    Background="{StaticResource BackgroundGradientBrush}"
                    CornerRadius="10"
                    Cursor="Hand">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="3" Opacity="0.4"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="260"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Poster Image -->
                    <Border Grid.Row="0" CornerRadius="10,10,0,0" ClipToBounds="True">
                        <Grid>
                            <Image Source="{Binding PosterPath}" 
                                   Stretch="UniformToFill"/>

                            <!-- Movie Type Badge -->
                            <Border Background="{StaticResource BackgroundDarkBrush}"
                                    CornerRadius="0,0,8,0"
                                    Padding="8,4"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top">
                                <TextBlock Text="{Binding MovieType}" 
                                           Foreground="White"
                                           FontSize="12"
                                           FontWeight="Bold"/>
                            </Border>

                            <!-- Rating Badge -->
                            <Border Background="#CC000000"
                                    CornerRadius="15"
                                    Padding="8,4"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Margin="10">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Assets/Icons/icons8-star-48.png"
                                           Width="12"
                                           Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding AverageRating, StringFormat={}{0:F1}}" 
                                               Foreground="Gold"
                                               FontSize="12"
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </Border>

                            <!-- Hover Overlay -->
                            <Border x:Name="HoverOverlay"
                                    Background="#AA000000"
                                    Opacity="0">
                                <Grid>
                                    <StackPanel VerticalAlignment="Center" 
                                                HorizontalAlignment="Center">
                                        <Button Style="{StaticResource PrimaryButton}"
                                                Command="{Binding DataContext.PlayMovieCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Width="115"
                                                Margin="5">
                                            <StackPanel Orientation="Horizontal"
                                                        Margin="10,5">
                                                <Image Source="/Assets/Icons/icons8-play-48.png"
                                                       Width="20" Height="20"
                                                       Margin="0,0,5,0"/>
                                                <TextBlock Text="Xem ngay"/>
                                            </StackPanel>
                                        </Button>
                                        <Button Style="{StaticResource SecondaryButton}"
                                                Command="{Binding DataContext.ViewMovieDetailCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Width="115"
                                                Margin="5">
                                            <StackPanel Orientation="Horizontal" Margin="10,5">
                                                <Image Source="/Assets/Icons/icons8-info-white-48.png"
                                                        Width="20" Height="20"
                                                        Margin="0,0,5,0"/>
                                                <TextBlock Text="Chi tiết" Foreground="{StaticResource TextPrimaryBrush}"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Movie Info -->
                    <Grid Grid.Row="1" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="{Binding Title}" 
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   TextTrimming="CharacterEllipsis"
                                   MaxHeight="36"
                                   TextWrapping="Wrap"/>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="{Binding ReleaseYear}" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="11"/>
                            <TextBlock Text=" • " 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="11"
                                       Margin="5,0"/>
                            <TextBlock Text="{Binding ViewCount, StringFormat={}{0} lượt xem}" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="11"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!-- Hover Animation Trigger -->
                <Border.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="HoverOverlay"
                                               Storyboard.TargetProperty="Opacity"
                                               To="1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="HoverOverlay"
                                               Storyboard.TargetProperty="Opacity"
                                               To="0" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundGradientBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource BackgroundDarkBrush}"
                Padding="30,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0"
                            Orientation="Horizontal">
                    <Image Source="/Assets/Icons/icons8-film-50.png"
                           Height="30" Width="30"
                           Margin="0,0,10,0"/>
                    <TextBlock Text="Danh Sách Phim"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                </StackPanel>

                <!-- Search Box -->
                <Grid Margin="0,0,0,0" HorizontalAlignment="Right">
                    <TextBox x:Name="txtSearch"
                             Width="200"
                             Style="{StaticResource SearchBox}"
                             Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Filter Bar -->
        <Border Grid.Row="1" 
                Background="Transparent"
                BorderThickness="0,1,0,1"
                BorderBrush="{StaticResource MaterialDesignLightSeparatorBackground}"
                Padding="30,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Genre Filter -->
                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                    <TextBlock Text="Thể loại" 
                               FontSize="12"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Genres}"
                              SelectedItem="{Binding SelectedGenre}"
                              DisplayMemberPath="GenreName"
                              Width="150"
                              Style="{StaticResource ModernComboBox}"/>
                </StackPanel>

                <!-- Country Filter -->
                <StackPanel Grid.Column="1" Margin="0,0,15,0">
                    <TextBlock Text="Quốc gia" 
                               FontSize="12"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Countries}"
                              SelectedItem="{Binding SelectedCountry}"
                              DisplayMemberPath="CountryName"
                              Width="150"
                              Style="{StaticResource ModernComboBox}"/>
                </StackPanel>

                <!-- Movie Type Filter -->
                <StackPanel Grid.Column="2" Margin="0,0,15,0">
                    <TextBlock Text="Loại phim" 
                               FontSize="12"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,5"/>
                    <ComboBox SelectedItem="{Binding SelectedMovieType}"
                              Width="120"
                              Style="{StaticResource ModernComboBox}">
                        <ComboBoxItem Content="Tất cả"/>
                        <ComboBoxItem Content="Phim lẻ"/>
                        <ComboBoxItem Content="Phim bộ"/>
                    </ComboBox>
                </StackPanel>

                <!-- Sort By -->
                <StackPanel Grid.Column="3" Margin="0,0,15,0">
                    <TextBlock Text="Sắp xếp" 
                               FontSize="12"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,5"/>
                    <ComboBox SelectedItem="{Binding SortBy}"
                              Width="140"
                              Style="{StaticResource ModernComboBox}">
                        <ComboBoxItem Content="Mới nhất"/>
                        <ComboBoxItem Content="Cũ nhất"/>
                        <ComboBoxItem Content="Đánh giá cao"/>
                        <ComboBoxItem Content="Xem nhiều"/>
                        <ComboBoxItem Content="Tên A-Z"/>
                        <ComboBoxItem Content="Tên Z-A"/>
                    </ComboBox>
                </StackPanel>

                <!-- Clear Filters Button -->
                <Button Grid.Column="5"
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding ClearFiltersCommand}"
                        VerticalAlignment="Center"  >
                    <StackPanel Orientation="Horizontal"
                                Margin="10,5">
                        <Image Source="/Assets/Icons/icons8-refresh-48.png"
                               Width="25" Height="25"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                        <TextBlock Text="Xóa bộ lọc"
                                   FontSize="15"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Movie Grid -->
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="20">
            <ItemsControl ItemsSource="{Binding Movies}"
                          ItemTemplate="{StaticResource MovieGridTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" 
                                   HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

        <!-- Pagination -->
        <Grid Grid.Row="3" Margin="0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Pagination Buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="btnFirstPage"
                 Style="{StaticResource SecondaryButton}"
                 Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Image Source="/Assets/Icons/icons8-start-50.png"
                        Height="20" Width="20"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnPrevPage"
                 Style="{StaticResource SecondaryButton}"
                 Margin="0,0,0,0">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <Image Source="/Assets/Icons/icons8-back-48.png"
                        Height="10" Width="10"/>
                    </StackPanel>
                </Button>

                <Button Margin="10,0"
                 Style="{StaticResource SecondaryButton}">
                    <TextBlock Text="{Binding PageInfo}"
                        Foreground="{StaticResource TextSecondaryBrush}"
                        Margin="10,0"/>
                </Button>

                <Button x:Name="btnNextPage"
                 Style="{StaticResource SecondaryButton}"
                 Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <Image Source="/Assets/Icons/icons8-next-48.png"
                        Height="10" Width="10"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnLastPage"
                 Style="{StaticResource SecondaryButton}"
                 Margin="0">
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Image Source="/Assets/Icons/icons8-end-50.png"
                        Height="20" Width="20"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
