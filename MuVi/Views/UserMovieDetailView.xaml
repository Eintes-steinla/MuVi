<Window x:Class="MuVi.Views.UserMovieDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Chi tiết phim" 
        Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundGradientBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header với Poster và Info -->
            <Grid Grid.Row="0" Height="450">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Background Blur -->
                <Border Grid.ColumnSpan="2">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding CurrentMovie.PosterPath}"
                                    Stretch="UniformToFill"
                                    Opacity="0.2"/>
                    </Border.Background>
                </Border>

                <!-- Poster -->
                <Border Grid.Column="0" 
                        Width="300" Height="420"
                        CornerRadius="15"
                        Margin="30"
                        VerticalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.6"/>
                    </Border.Effect>
                    <Image Source="{Binding CurrentMovie.PosterPath}"
                           Stretch="UniformToFill"/>
                </Border>

                <!-- Movie Info -->
                <StackPanel Grid.Column="1" 
                            Margin="20,30,30,30"
                            VerticalAlignment="Center">

                    <!-- Title -->
                    <TextBlock Text="{Binding CurrentMovie.Title}"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               TextWrapping="Wrap"/>

                    <!-- Type Badge -->
                    <Border Background="{StaticResource BackgroundDarkBrush}"
                            CornerRadius="5"
                            Padding="10,5"
                            HorizontalAlignment="Left"
                            Margin="0,10,0,0">
                        <TextBlock Text="{Binding CurrentMovie.MovieType}"
                                   Foreground="White"
                                   FontSize="12"
                                   FontWeight="Bold"/>
                    </Border>

                    <!-- Rating -->
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <TextBlock Text="⭐" FontSize="24"/>
                        <TextBlock Text="{Binding CurrentMovie.AverageRating, StringFormat={}{0:F1}}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="Gold"
                                   Margin="10,0"/>
                        <TextBlock Text="{Binding CurrentMovie.TotalReviews, StringFormat={}({0} đánh giá)}"
                                   FontSize="14"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="5,5,0,0"/>
                    </StackPanel>

                    <!-- Info Grid -->
                    <Grid Margin="0,20,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Đạo diễn:" 
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CurrentMovie.Director}"
                                   Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold" Margin="0,5"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Năm:" 
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentMovie.ReleaseYear}"
                                   Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold" Margin="0,5"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Quốc gia:" 
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentMovie.CountryName}"
                                   Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold" Margin="0,5"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Lượt xem:" 
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentMovie.ViewCount, StringFormat={}{0:N0}}"
                                   Foreground="{StaticResource TextPrimaryBrush}" FontWeight="SemiBold" Margin="0,5"/>
                    </Grid>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" Margin="0,30,0,0">
                        <Button Style="{StaticResource PrimaryButton}"
                                Command="{Binding PlayMovieCommand}"
                                Padding="25,12"
                                Margin="0,0,15,0"
                                FontSize="16">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="▶" FontSize="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Xem phim"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SecondaryButton}"
                                Command="{Binding ToggleFavoriteCommand}"
                                Content="{Binding FavoriteButtonText}"
                                Padding="20,12"
                                Margin="0,0,15,0"
                                FontSize="14"/>

                        <Button Style="{StaticResource SecondaryButton}"
                                Command="{Binding ViewTrailerCommand}"
                                Padding="20,12"
                                FontSize="14">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🎬" Margin="0,0,5,0"/>
                                <TextBlock Text="Trailer"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <Separator Grid.Row="1" Margin="30,0" Background="{StaticResource MaterialDesignLightSeparatorBackground}"/>

            <!-- Description & Episodes -->
            <Grid Grid.Row="2" Margin="30,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Description -->
                <StackPanel Grid.Row="0" Margin="0,0,0,30">
                    <TextBlock Text="📝 Nội dung phim"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,15"/>
                    <TextBlock Text="{Binding CurrentMovie.Description}"
                               FontSize="14"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               TextWrapping="Wrap"
                               LineHeight="24"/>
                </StackPanel>

                <!-- Episodes (if series) -->
                <StackPanel Grid.Row="1" 
                            Visibility="{Binding IsSeriesMovie, Converter={StaticResource BoolToVisibilityConverter}}"
                            Margin="0,0,0,30">
                    <TextBlock Text="📺 Danh sách tập phim"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,15"/>

                    <ItemsControl ItemsSource="{Binding Episodes}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource SecondaryButton}"
                                        Command="{Binding DataContext.PlayEpisodeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        HorizontalAlignment="Left"
                                        Margin="0,5,10,5"
                                        Padding="15,10">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="▶" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Title}"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </StackPanel>

                <!-- Actors -->
                <StackPanel Grid.Row="2">
                    <TextBlock Text="🎭 Diễn viên"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,15"/>

                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Actors}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="120" Margin="0,0,15,0">
                                        <StackPanel>
                                            <Border Width="120" Height="120" CornerRadius="60" ClipToBounds="True">
                                                <Image Source="{Binding PhotoPath}" Stretch="UniformToFill"/>
                                            </Border>
                                            <TextBlock Text="{Binding ActorName}"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       TextAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,10,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Grid>

            <Separator Grid.Row="3" Margin="30,0,30,20" Background="{StaticResource MaterialDesignLightSeparatorBackground}" VerticalAlignment="Top"/>

            <!-- Reviews Section -->
            <Grid Grid.Row="3" Margin="30,30,30,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="💬 Đánh giá và bình luận"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,20"/>

                <!-- Submit Review Form -->
                <Border Grid.Row="1"
                        Background="{StaticResource BackgroundDarkBrush}"
                        BorderBrush="{StaticResource MaterialDesignLightSeparatorBackground}"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Đánh giá của bạn"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,10"/>

                        <!-- Star Rating -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="Xếp hạng:" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <ComboBox SelectedValue="{Binding UserRating}" Width="100">
                                <ComboBoxItem Content="⭐ 1 sao" Tag="1"/>
                                <ComboBoxItem Content="⭐⭐ 2 sao" Tag="2"/>
                                <ComboBoxItem Content="⭐⭐⭐ 3 sao" Tag="3"/>
                                <ComboBoxItem Content="⭐⭐⭐⭐ 4 sao" Tag="4"/>
                                <ComboBoxItem Content="⭐⭐⭐⭐⭐ 5 sao" Tag="5"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Comment -->
                        <TextBox Text="{Binding UserComment, UpdateSourceTrigger=PropertyChanged}"
                                 Height="100"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,15"/>

                        <Button Style="{StaticResource PrimaryButton}"
                                Command="{Binding SubmitReviewCommand}"
                                Content="Gửi đánh giá"
                                HorizontalAlignment="Left"
                                Padding="20,10"/>
                    </StackPanel>
                </Border>

                <!-- Reviews List -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Reviews}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource PrimaryPurpleDarkBrush}"
                                        BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="15"
                                        Margin="0,0,0,10">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Username}"
                                                           FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                                <TextBlock Text="{Binding CreatedAt, StringFormat={}{0:dd/MM/yyyy HH:mm}}"
                                                           FontSize="11"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           Margin="0,3,0,0"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <TextBlock Text="⭐" FontSize="14"/>
                                                <TextBlock Text="{Binding Rating}"
                                                           FontSize="14"
                                                           FontWeight="Bold"
                                                           Foreground="Gold"
                                                           Margin="5,0,0,0"/>
                                            </StackPanel>
                                        </Grid>

                                        <TextBlock Text="{Binding Comment}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   TextWrapping="Wrap"
                                                   Margin="0,10,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
