<UserControl x:Class="MuVi.Views.UserFavoritesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Favorite Movie Card Template -->
        <DataTemplate x:Key="FavoriteMovieCardTemplate">
            <Border Width="200" Height="340" Margin="10"
                    Background="{StaticResource BackgroundGradientBrush}"
                    CornerRadius="0"
                    Cursor="Hand">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="3" Opacity="0.4"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="240"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Poster -->
                    <Border Grid.Row="0" CornerRadius="10,10,0,0" ClipToBounds="True">
                        <Image Source="{Binding PosterPath}" Stretch="UniformToFill"/>
                    </Border>

                    <!-- Love Badge -->
                    <Border Grid.Row="0"
                            Background="#CCE91E63"
                            CornerRadius="100"
                            Padding="5"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="10">
                        <Image Source="/Assets/Icons/icons8-heart-48.png"
                               Width="20" Height="20"/>
                    </Border>

                    <!-- Movie Info -->
                    <Grid Grid.Row="1" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="{Binding Title}" 
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   TextTrimming="CharacterEllipsis"
                                   MaxHeight="36"
                                   TextWrapping="Wrap"/>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
                            <Image Source="/Assets/Icons/icons8-star-48.png"
                                   Width="12" Height="12"
                                   Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding AverageRating, StringFormat={}{0:F1}}" 
                                       Foreground="Gold"
                                       FontSize="12"
                                       FontWeight="Bold"/>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <Grid Grid.Row="2" Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Style="{StaticResource PrimaryButton}"
                                    Command="{Binding DataContext.PlayMovieCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Margin="0,0,10,0">
                                <StackPanel Orientation="Horizontal"
                                            Margin="10,5">
                                    <Image Source="/Assets/Icons/icons8-play-48.png"
                                           Width="20" Height="20"
                                           Margin="0,0,5,0"/>
                                    <TextBlock Text="Xem" FontSize="15"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="1"
                                    Style="{StaticResource SecondaryButton}"
                                    Command="{Binding DataContext.RemoveFavoriteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    ToolTip="Xóa khỏi yêu thích">
                                <Image Source="/Assets/Icons/icons8-remove-48.png"
                                        Width="18" Height="18"
                                       Margin="5"/>
                            </Button>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundGradientBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource BackgroundDarkBrush}"
                Padding="30,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Assets/Icons/icons8-unheart-48.png"
                               Width="36" Height="36"
                               Margin="0,0,10,0"/>
                    <TextBlock Text="Phim Yêu Thích"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                    <TextBlock Text="{Binding TotalFavorites, StringFormat={}Bạn có {0} phim yêu thích}"
                               FontSize="14"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="47,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding LoadDataCommand}"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal"
                                Margin="10,5">
                        <Image Source="/Assets/Icons/icons8-refresh-48.png"
                               Width="20" Height="20"
                               Margin="0,0,5,0"/>
                        <TextBlock Text="Làm mới" Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1">
            <!-- Loading -->
            <Grid Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                    <TextBlock Text="Đang tải danh sách yêu thích..."
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="14"
                               Margin="0,15,0,0"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Empty State -->
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Visibility="{Binding FavoriteMovies.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                <TextBlock Text="💔" FontSize="80" HorizontalAlignment="Center" Opacity="0.3"/>
                <TextBlock Text="Chưa có phim yêu thích"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,10"/>
                <TextBlock Text="Hãy khám phá và thêm những bộ phim bạn yêu thích!"
                           FontSize="14"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Movie Grid -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Padding="20"
                          Visibility="{Binding FavoriteMovies.Count, Converter={StaticResource NotZeroToVisibilityConverter}}">
                <ItemsControl ItemsSource="{Binding FavoriteMovies}"
                              ItemTemplate="{StaticResource FavoriteMovieCardTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" 
                                       HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
