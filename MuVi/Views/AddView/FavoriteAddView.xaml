<Window x:Class="MuVi.Views.AddView.FavoriteAddView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm yêu thích" 
        Height="500" Width="600"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helpers="clr-namespace:MuVi.Helpers"
        d:DesignHeight="450" d:DesignWidth="600"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Window.Resources>
    
    <Border Background="{StaticResource BackgroundGradientBrush}"
            BorderThickness="1" BorderBrush="{StaticResource PrimaryPurpleDarkBrush}">
        <Grid Margin="40,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" 
                       Text="Thêm vào yêu thích"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       FontSize="24"
                       TextAlignment="Center"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- Form -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- User Selection -->
                    <TextBlock Text="Người dùng (*)" Style="{StaticResource FormLabel}"/>
                    <ComboBox x:Name="cmbUser"
                              ItemsSource="{Binding UserList}"
                              SelectedItem="{Binding SelectedUser}"
                              DisplayMemberPath="Username"
                              Style="{StaticResource ModernComboBox}"
                              Margin="0,0,0,15"/>

                    <!-- Movie Selection -->
                    <TextBlock Text="Phim (*)" Style="{StaticResource FormLabel}"/>
                    <ComboBox x:Name="cmbMovie"
                              ItemsSource="{Binding MovieList}"
                              SelectedItem="{Binding SelectedMovie}"
                              DisplayMemberPath="Title"
                              Style="{StaticResource ModernComboBox}"
                              Margin="0,0,0,15"/>

                    <!-- Movie Details (Preview) -->
                    <Border BorderBrush="#3A3A3A" 
                            BorderThickness="1" 
                            CornerRadius="5"
                            Padding="15"
                            Margin="0,10,0,0"
                            Background="#1A1A1A"
                            Visibility="{Binding SelectedMovie, Converter={StaticResource NullToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="Thông tin phim được chọn:" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                           Text="Tiêu đề:" 
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Row="0" Grid.Column="2" 
                                           Text="{Binding SelectedMovie.Title}" 
                                           Foreground="{StaticResource TextPrimaryBrush}"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                           Text="Loại phim:" 
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Row="2" Grid.Column="2" 
                                           Text="{Binding SelectedMovie.MovieType}" 
                                           Foreground="{StaticResource TextPrimaryBrush}"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" 
                                           Text="Năm phát hành:" 
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Row="4" Grid.Column="2" 
                                           Text="{Binding SelectedMovie.ReleaseYear}" 
                                           Foreground="{StaticResource TextPrimaryBrush}"/>

                                <TextBlock Grid.Row="6" Grid.Column="0" 
                                           Text="Đánh giá:" 
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Row="6" Grid.Column="2" 
                                           Text="{Binding SelectedMovie.Rating}" 
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Click="btnSave_Click"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,0,10,0">
                    <TextBlock Text="Thêm" Margin="5"/>
                </Button>

                <Button Grid.Column="1"
                        Click="btnCancel_Click"
                        Style="{StaticResource SecondaryButton}"
                        Margin="10,0,0,0">
                    <TextBlock Text="Hủy" Margin="5"/>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>