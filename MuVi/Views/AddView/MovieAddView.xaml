<Window x:Class="MuVi.Views.AddView.MovieAddView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm phim" 
        Height="750" Width="600"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        d:DesignHeight="750" d:DesignWidth="600"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundGradientBrush}"
            BorderThickness="1" BorderBrush="{StaticResource PrimaryPurpleDarkBrush}">
        <Grid Margin="40,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" 
                       Text="Thêm phim"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       FontSize="24"
                       TextAlignment="Center"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- Form -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Title -->
                    <TextBlock Text="Tiêu đề" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="txtTitle"
                             Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,15"/>

                    <!-- Description -->
                    <TextBlock Text="Mô tả" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="txtDescription"
                             Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Height="80"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,15"/>

                    <!-- Poster -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Ảnh poster" Style="{StaticResource FormLabel}"/>

                        <Grid Width="Auto" MinWidth="200" Height="200" HorizontalAlignment="Center">
                            <Border x:Name="PosterBorder" 
                                    CornerRadius="8" 
                                    BorderThickness="2" 
                                    BorderBrush="Gray"
                                    Background="#2D2D2D"
                                    ClipToBounds="True">
                                <Image Source="{Binding PreviewPoster}" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Stretch"
                                       Stretch="Uniform"/>
                            </Border>

                            <Button Command="{Binding UploadPosterCommand}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    ToolTip="Click để thay đổi ảnh">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid Background="Transparent">
                                            <Border Background="Transparent" 
                                                    CornerRadius="8" 
                                                    x:Name="Overlay" 
                                                    Visibility="Collapsed">
                                                <Image Source="/Assets/Icons/icons8-plus-60.png" Width="35" Height="35"/>
                                            </Border>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Overlay" Property="Visibility" Value="Visible"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Trailer URL -->
                    <TextBlock Text="Trailer URL" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="txtTrailerURL"
                             Text="{Binding TrailerURL, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,15"/>

                    <!-- Video Upload Section (CHỈ CHO PHIM LẺ) -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Video phim (chỉ dành cho phim lẻ)" 
                                   Style="{StaticResource FormLabel}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Hiển thị tên file/URL -->
                            <TextBox Grid.Column="0"
                                     Text="{Binding VideoFileName, Mode=OneWay}"
                                     IsReadOnly="True"
                                     Style="{StaticResource ModernTextBox}"
                                     Margin="0,0,10,0"/>

                            <!-- Nút Upload -->
                            <Button Grid.Column="1"
                                    Command="{Binding UploadVideoCommand}"
                                    Style="{StaticResource PrimaryButton}"
                                    Margin="0,0,10,0">
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <Image Source="/Assets/Icons/icons8-plus-60.png"
                                           Height="20" Width="20"
                                           Margin="8,0"/>
                                </StackPanel>
                            </Button>

                            <!-- Nút Clear -->
                            <Button Grid.Column="2"
                                    Command="{Binding ClearVideoCommand}"
                                    Style="{StaticResource SecondaryButton}">
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <Image Source="/Assets/Icons/icons8-remove-48.png"
                                           Height="20" Width="20"
                                           Margin="8,0"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <TextBlock Text="Lưu ý: Phim lẻ có thể upload video hoặc nhập URL. Phim bộ quản lý video theo từng tập." 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="11"
                                   FontStyle="Italic"
                                   Margin="0,5,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Release Year & Duration (2 columns) -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Năm phát hành" Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="txtReleaseYear"
                                     Text="{Binding ReleaseYear, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Thời lượng (phút)" Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="txtDuration"
                                     Text="{Binding Duration, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Movie Type & Status (2 columns) -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Loại phim" Style="{StaticResource FormLabel}"/>
                            <ComboBox x:Name="cmbMovieType"
                                      SelectedValue="{Binding MovieType}"
                                      SelectedValuePath="Content"
                                      Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="Phim lẻ" IsSelected="True"/>
                                <ComboBoxItem Content="Phim bộ"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Trạng thái" Style="{StaticResource FormLabel}"/>
                            <ComboBox x:Name="cmbStatus"
                                      SelectedValue="{Binding Status}"
                                      SelectedValuePath="Content"
                                      Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="Đang chiếu" IsSelected="True"/>
                                <ComboBoxItem Content="Hoàn thành"/>
                                <ComboBoxItem Content="Sắp chiếu"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <!-- Total Episodes (only if Phim bộ) -->
                    <TextBlock Text="Tổng số tập" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="txtTotalEpisodes"
                             Text="{Binding TotalEpisodes, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,15"/>

                    <!-- Director & Country (2 columns) -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Đạo diễn" Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="txtDirector"
                                     Text="{Binding Director, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <!-- Country (ComboBox) -->
                            <TextBlock Text="Quốc gia" Style="{StaticResource FormLabel}"/>
                            <ComboBox x:Name="cmbCountry"
                                      ItemsSource="{Binding CountryList}"
                                      SelectedItem="{Binding SelectedCountry}"
                                      DisplayMemberPath="CountryName"
                                      Style="{StaticResource ModernComboBox}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Genres Selection -->
                    <TextBlock Text="Thể loại phim" Style="{StaticResource FormLabel}"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Available Genres -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Danh sách thể loại" 
                   FontSize="12"
                   Foreground="{StaticResource TextSecondaryBrush}"
                   Margin="0,0,0,5"/>
                            <ListBox ItemsSource="{Binding GenreList}"
                 DisplayMemberPath="GenreName"
                 Height="150"
                 SelectionMode="Multiple"
                 x:Name="lstAvailableGenres"
                 Background="#2D2D2D"
                 Foreground="{StaticResource TextPrimaryBrush}"
                 BorderBrush="#3A3A3A"
                 BorderThickness="1">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="8,5"/>
                                        <EventSetter Event="MouseDoubleClick" Handler="lstAvailableGenres_MouseDoubleClick"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </StackPanel>

                        <!-- Selected Genres -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Đã chọn" 
                   FontSize="12"
                   Foreground="{StaticResource TextSecondaryBrush}"
                   Margin="0,0,0,5"/>
                            <ListBox ItemsSource="{Binding SelectedGenres}"
                 DisplayMemberPath="GenreName"
                 Height="150"
                 x:Name="lstSelectedGenres"
                 Background="#2D2D2D"
                 Foreground="{StaticResource TextPrimaryBrush}"
                 BorderBrush="#3A3A3A"
                 BorderThickness="1">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="8,5"/>
                                        <EventSetter Event="MouseDoubleClick" Handler="lstSelectedGenres_MouseDoubleClick"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </StackPanel>
                    </Grid>
                    <TextBlock Text="Nhấp đúp để thêm/xóa thể loại" 
           Foreground="{StaticResource TextSecondaryBrush}"
           FontSize="11"
           FontStyle="Italic"
           Margin="0,-10,0,15"
           TextWrapping="Wrap"/>

                    <!-- Rating & View Count (2 columns) -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Đánh giá (0-10)" Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="txtRating"
                                     Text="{Binding Rating, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Lượt xem" Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="txtViewCount"
                                     Text="{Binding ViewCount, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Click="btnSave_Click"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,0,10,0">
                    <TextBlock Text="Lưu" Margin="5"/>
                </Button>

                <Button Grid.Column="1"
                        Click="btnCancel_Click"
                        Style="{StaticResource SecondaryButton}"
                        Margin="10,0,0,0">
                    <TextBlock Text="Hủy" Margin="5"/>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>