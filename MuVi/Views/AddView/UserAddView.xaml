<Window x:Class="MuVi.Views.AddView.UserAddView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add user" 
        Height="600" Width="500"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        d:DesignHeight="1000" d:DesignWidth="500"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundGradientBrush}"
            BorderThickness="1" BorderBrush="{StaticResource PrimaryPurpleDarkBrush}">
        <Grid Margin="40,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" 
                       Text="Thêm người dùng"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       FontSize="24"
                       TextAlignment="Center"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- Form -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Username -->
                    <TextBlock Text="Tên người dùng" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="txtUsername"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,15"/>

                    <!-- Email -->
                    <TextBlock Text="Email" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="txtEmail"
                             Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,15"/>

                    <!-- Password (only for Add mode) -->
                    <TextBlock Text="Mật khẩu" 
                               Style="{StaticResource FormLabel}"
                               Visibility="{Binding IsAddMode, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <PasswordBox x:Name="txtPassword"
                                 Style="{StaticResource ModernPasswordBox}"
                                 Margin="0,0,0,15"
                                 Visibility="{Binding IsAddMode, Converter={StaticResource BoolToVisibilityConverter}}"/>

                    <!-- Date of Birth -->
                    <TextBlock Text="Ngày sinh" Style="{StaticResource FormLabel}"/>
                    <DatePicker x:Name="dpDateOfBirth"
                                SelectedDate="{Binding DateOfBirth}"
                                Style="{StaticResource ModernDatePicker}"
                                Margin="0,0,0,15"/>

                    <!-- Avatar -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Ảnh đại diện" Style="{StaticResource FormLabel}"/>

                        <Grid Width="100" Height="100" HorizontalAlignment="Center">
                            <Border x:Name="AvatarBorder" 
                                    CornerRadius="50" 
                                    BorderThickness="2" 
                                    BorderBrush="Gray"
                                    Background="#2D2D2D">
                                <Border.Child>
                                    <Image Source="{Binding PreviewAvatar}" Stretch="UniformToFill">
                                        <Image.Clip>
                                            <EllipseGeometry Center="48,48" RadiusX="48" RadiusY="48"/>
                                        </Image.Clip>
                                    </Image>
                                </Border.Child>
                            </Border>

                            <Button Command="{Binding UploadAvatarCommand}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    ToolTip="Click để thay đổi ảnh">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid Background="Transparent">
                                            <Border Background="Transparent" 
                                                    CornerRadius="100" 
                                                    x:Name="Overlay" 
                                                    Visibility="Collapsed">
                                                <Image Source="/Assets/Icons/icons8-plus-60.png" Width="25" Height="25"/>
                                            </Border>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Overlay" Property="Visibility" Value="Visible"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Role -->
                    <TextBlock Text="Vai trò" Style="{StaticResource FormLabel}"/>
                    <ComboBox x:Name="cmbRole"
                              SelectedValue="{Binding Role}"
                              SelectedValuePath="Content"
                              Style="{StaticResource ModernComboBox}"
                              Margin="0,0,0,15">
                        <ComboBoxItem Content="User" IsSelected="True"/>
                        <ComboBoxItem Content="Admin"/>
                    </ComboBox>

                    <!-- Is Active -->
                    <CheckBox x:Name="chkIsActive"
                              Content="Tài khoản hoạt động"
                              IsChecked="{Binding IsActive}"
                              Style="{StaticResource ModernCheckBox}"
                              Margin="0,0,0,15"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Click="btnSave_Click"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,0,10,0">
                    <TextBlock Text="Lưu" Margin="5"/>
                </Button>

                <Button Grid.Column="1"
                        Click="btnCancel_Click"
                        Style="{StaticResource SecondaryButton}"
                        Margin="10,0,0,0">
                    <TextBlock Text="Hủy" Margin="5"/>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>