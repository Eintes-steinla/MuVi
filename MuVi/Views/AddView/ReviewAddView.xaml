<Window x:Class="MuVi.Views.AddView.ReviewAddView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm đánh giá" 
        Height="550" Width="600"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        d:DesignHeight="550" d:DesignWidth="600"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Border Background="{StaticResource BackgroundGradientBrush}"
            BorderThickness="1" BorderBrush="{StaticResource PrimaryPurpleDarkBrush}">
        <Grid Margin="40,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" 
                       Text="Thêm đánh giá"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       FontSize="24"
                       TextAlignment="Center"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- Form -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- User Selection -->
                    <TextBlock Text="Người dùng" Style="{StaticResource FormLabel}"/>
                    <ComboBox x:Name="cmbUser"
                              ItemsSource="{Binding UserList}"
                              SelectedItem="{Binding SelectedUser}"
                              DisplayMemberPath="Username"
                              Style="{StaticResource ModernComboBox}"
                              Margin="0,0,0,15"/>

                    <!-- Movie Selection -->
                    <TextBlock Text="Phim" Style="{StaticResource FormLabel}"/>
                    <ComboBox x:Name="cmbMovie"
                              ItemsSource="{Binding MovieList}"
                              SelectedItem="{Binding SelectedMovie}"
                              DisplayMemberPath="Title"
                              Style="{StaticResource ModernComboBox}"
                              Margin="0,0,0,15"/>

                    <!-- Rating -->
                    <TextBlock Text="Đánh giá (1-10 điểm)" Style="{StaticResource FormLabel}"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Slider x:Name="sldRating"
                                Grid.Column="0"
                                Minimum="1"
                                Maximum="10"
                                TickFrequency="1"
                                IsSnapToTickEnabled="True"
                                Value="{Binding Rating, Mode=TwoWay}"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"/>

                        <TextBlock Grid.Column="1"
                                   Text="{Binding Rating}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryPurpleBrush}"
                                   VerticalAlignment="Center"
                                   Width="40"
                                   TextAlignment="Center"/>
                    </Grid>

                    <!-- Comment -->
                    <TextBlock Text="Bình luận" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="txtComment"
                             Text="{Binding Comment, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Height="150"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,15"/>

                    <!-- Character count -->
                    <TextBlock Text="{Binding Comment.Length, StringFormat='Số ký tự: {0}'}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"
                               HorizontalAlignment="Right"
                               Margin="0,-10,0,15"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Click="btnSave_Click"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,0,10,0">
                    <TextBlock Text="Lưu" Margin="5"/>
                </Button>

                <Button Grid.Column="1"
                        Click="btnCancel_Click"
                        Style="{StaticResource SecondaryButton}"
                        Margin="10,0,0,0">
                    <TextBlock Text="Hủy" Margin="5"/>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>