<Window x:Class="MuVi.Views.AddView.ActorAddView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm diễn viên" 
        Height="650" Width="600"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        d:DesignHeight="650" d:DesignWidth="600"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Border Background="{StaticResource BackgroundGradientBrush}"
            BorderThickness="1" BorderBrush="{StaticResource PrimaryPurpleDarkBrush}">
        <Grid Margin="40,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" 
                       Text="Thêm diễn viên"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       FontSize="24"
                       TextAlignment="Center"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- Form -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Actor Name -->
                    <TextBlock Text="Tên diễn viên" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="txtActorName"
                             Text="{Binding ActorName, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,15"/>

                    <!-- Photo -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Ảnh diễn viên" Style="{StaticResource FormLabel}"/>

                        <Grid Width="Auto" MinWidth="200" Height="200" HorizontalAlignment="Center">
                            <Border x:Name="PhotoBorder" 
                                    CornerRadius="8" 
                                    BorderThickness="2" 
                                    BorderBrush="Gray"
                                    Background="#2D2D2D"
                                    ClipToBounds="True">
                                <Image Source="{Binding PreviewPhoto}" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Stretch"
                                       Stretch="Uniform"/>
                            </Border>

                            <Button Command="{Binding UploadPhotoCommand}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    ToolTip="Click để thay đổi ảnh">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid Background="Transparent">
                                            <Border Background="Transparent" 
                                                    CornerRadius="8" 
                                                    x:Name="Overlay" 
                                                    Visibility="Collapsed">
                                                <Image Source="/Assets/Icons/icons8-plus-60.png" Width="35" Height="35"/>
                                            </Border>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Overlay" Property="Visibility" Value="Visible"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Bio -->
                    <TextBlock Text="Tiểu sử" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="txtBio"
                             Text="{Binding Bio, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Height="100"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,15"/>

                    <!-- Date of Birth & Nationality (2 columns) -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Ngày sinh" Style="{StaticResource FormLabel}"/>
                            <DatePicker x:Name="dpDateOfBirth"
                                        SelectedDate="{Binding DateOfBirth, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource ModernDatePicker}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Quốc tịch" Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="txtNationality"
                                     Text="{Binding Nationality, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Click="btnSave_Click"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,0,10,0">
                    <TextBlock Text="Lưu" Margin="5"/>
                </Button>

                <Button Grid.Column="1"
                        Click="btnCancel_Click"
                        Style="{StaticResource SecondaryButton}"
                        Margin="10,0,0,0">
                    <TextBlock Text="Hủy" Margin="5"/>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>