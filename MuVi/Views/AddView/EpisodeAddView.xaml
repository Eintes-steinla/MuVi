<Window x:Class="MuVi.Views.AddView.EpisodeAddView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm tập phim" 
        Height="750" Width="600"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        d:DesignHeight="750" d:DesignWidth="600"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundGradientBrush}"
            BorderThickness="1" BorderBrush="{StaticResource PrimaryPurpleDarkBrush}">
        <Grid Margin="40,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" 
                       Text="Thêm tập phim"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       FontSize="24"
                       TextAlignment="Center"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- Form -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Movie Selection -->
                    <TextBlock Text="Phim" Style="{StaticResource FormLabel}"/>
                    <ComboBox x:Name="cmbMovie"
                              ItemsSource="{Binding MovieList}"
                              SelectedItem="{Binding SelectedMovie}"
                              DisplayMemberPath="Title"
                              Style="{StaticResource ModernComboBox}"
                              Margin="0,0,0,15"/>

                    <!-- Episode Number & Duration (2 columns) -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Số tập" Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="txtEpisodeNumber"
                                     Text="{Binding EpisodeNumber, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Thời lượng (phút)" Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="txtDuration"
                                     Text="{Binding Duration, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Title -->
                    <TextBlock Text="Tiêu đề" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="txtTitle"
                             Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,15"/>

                    <!-- Description -->
                    <TextBlock Text="Mô tả" Style="{StaticResource FormLabel}"/>
                    <TextBox x:Name="txtDescription"
                             Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             Height="80"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,15"/>

                    <!-- Poster -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Ảnh poster" Style="{StaticResource FormLabel}"/>

                        <Grid Width="Auto" MinWidth="200" Height="200" HorizontalAlignment="Center">
                            <Border x:Name="PosterBorder" 
                                    CornerRadius="8" 
                                    BorderThickness="2" 
                                    BorderBrush="Gray"
                                    Background="#2D2D2D"
                                    ClipToBounds="True">
                                <Image Source="{Binding PreviewPoster}" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Stretch"
                                       Stretch="Uniform"/>
                            </Border>

                            <Button Command="{Binding UploadPosterCommand}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    ToolTip="Click để thay đổi ảnh">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid Background="Transparent">
                                            <Border Background="Transparent" 
                                                    CornerRadius="8" 
                                                    x:Name="Overlay" 
                                                    Visibility="Collapsed">
                                                <Image Source="/Assets/Icons/icons8-plus-60.png" Width="35" Height="35"/>
                                            </Border>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Overlay" Property="Visibility" Value="Visible"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Video Upload Section -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Video tập phim" 
                                   Style="{StaticResource FormLabel}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                     Text="{Binding VideoFileName, Mode=OneWay}"
                                     IsReadOnly="True"
                                     Style="{StaticResource ModernTextBox}"
                                     Margin="0,0,10,0"/>

                            <Button Grid.Column="1"
                                    Command="{Binding UploadVideoCommand}"
                                    Style="{StaticResource PrimaryButton}"
                                    Margin="0,0,10,0">
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <Image Source="/Assets/Icons/icons8-plus-60.png"
                                           Height="20" Width="20"
                                           Margin="8,0"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="2"
                                    Command="{Binding ClearVideoCommand}"
                                    Style="{StaticResource SecondaryButton}">
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <Image Source="/Assets/Icons/icons8-remove-48.png"
                                           Height="20" Width="20"
                                           Margin="8,0"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Release Date & View Count (2 columns) -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Ngày phát hành" Style="{StaticResource FormLabel}"/>
                            <DatePicker x:Name="dpReleaseDate"
                                        SelectedDate="{Binding ReleaseDate, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource ModernDatePicker}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Lượt xem" Style="{StaticResource FormLabel}"/>
                            <TextBox x:Name="txtViewCount"
                                     Text="{Binding ViewCount, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Click="btnSave_Click"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,0,10,0">
                    <TextBlock Text="Lưu" Margin="5"/>
                </Button>

                <Button Grid.Column="1"
                        Click="btnCancel_Click"
                        Style="{StaticResource SecondaryButton}"
                        Margin="10,0,0,0">
                    <TextBlock Text="Hủy" Margin="5"/>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>