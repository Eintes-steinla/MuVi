<Window x:Class="MuVi.Views.AddView.VideoUrlInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nhập đường dẫn video" 
        Height="250" Width="500"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Border Background="{StaticResource BackgroundGradientBrush}"
            BorderThickness="1" BorderBrush="{StaticResource PrimaryPurpleDarkBrush}">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" 
                       Text="Nhập đường dẫn video từ cloud"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- URL Input -->
            <StackPanel Grid.Row="1">
                <TextBlock Text="URL Video (YouTube, Google Drive, Dropbox...)" 
                           Style="{StaticResource FormLabel}"/>
                <TextBox x:Name="txtVideoUrl"
                         Style="{StaticResource ModernTextBox}"
                         Text="{Binding VideoUrl, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>

            <!-- Buttons -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Click="btnOk_Click"
                        Style="{StaticResource PrimaryButton}"
                        Margin="0,0,10,0">
                    <TextBlock Text="Xác nhận" Margin="5"/>
                </Button>

                <Button Grid.Column="1"
                        Click="btnCancel_Click"
                        Style="{StaticResource SecondaryButton}"
                        Margin="10,0,0,0">
                    <TextBlock Text="Hủy" Margin="5"/>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>