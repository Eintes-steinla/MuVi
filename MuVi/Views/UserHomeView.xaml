<UserControl x:Class="MuVi.Views.UserHomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Movie Card Template -->
        <DataTemplate x:Key="MovieCardTemplate">
            <Border Width="180" Height="280" Margin="10"
                    Background="{StaticResource PrimaryPurpleDarkBrush}"
                    CornerRadius="8"
                    Cursor="Hand">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Poster -->
                    <Border Grid.Row="0" CornerRadius="8,8,0,0" ClipToBounds="True">
                        <Image Source="{Binding PosterPath}" 
                               Stretch="UniformToFill"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>

                    <!-- Info Overlay -->
                    <Grid Grid.Row="0" VerticalAlignment="Bottom" 
                          Background="#CC000000" Height="60">
                        <StackPanel Margin="10,5">
                            <TextBlock Text="{Binding Title}" 
                                       Foreground="White"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       TextTrimming="CharacterEllipsis"
                                       MaxHeight="36"
                                       TextWrapping="Wrap"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="⭐" FontSize="11" Foreground="Gold" Margin="0,0,3,0"/>
                                <TextBlock Text="{Binding AverageRating, StringFormat={}{0:F1}}" 
                                           Foreground="#FFD700"
                                           FontSize="11"
                                           FontWeight="Bold"/>
                                <TextBlock Text="{Binding ViewCount, StringFormat={}  👁 {0}}" 
                                           Foreground="LightGray"
                                           FontSize="10"
                                           Margin="10,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <!-- Action Buttons -->
                    <Grid Grid.Row="1" Background="{StaticResource PrimaryPurpleDarkBrush}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding DataContext.PlayMovieCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Margin="5"
                                Padding="5">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="▶" FontSize="10" Margin="0,0,3,0"/>
                                <TextBlock Text="Xem" FontSize="10"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="1"
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding DataContext.ViewMovieDetailCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Margin="5"
                                Padding="5">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="ℹ" FontSize="10" Margin="0,0,3,0"/>
                                <TextBlock Text="Chi tiết" FontSize="10"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  Background="{StaticResource BackgroundGradientBrush}">
        <StackPanel>
            <!-- Header Banner -->
            <Border Height="120" 
                    Background="{StaticResource BackgroundDarkBrush}"
                    Margin="0,0,0,20">
                <Grid>
                    <StackPanel Grid.Column="0" 
                                VerticalAlignment="Center" 
                                Margin="40,0">
                        <TextBlock Text="🎬 MuVi - Xem Phim Online"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Hàng ngàn bộ phim hay đang chờ bạn khám phá"
                                   FontSize="16"
                                   Foreground="WhiteSmoke"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Loading Indicator -->
            <ProgressBar IsIndeterminate="{Binding IsLoading}"
                         Height="3"
                         Margin="0,-20,0,20"
                         Foreground="{StaticResource MaterialDesignLightSeparatorBackground}"/>

            <!-- New Movies Section -->
            <StackPanel Margin="30,0,30,30">
                <TextBlock Text="🆕 Phim Mới Cập Nhật"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,15"/>

                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding NewMovies}"
                                  ItemTemplate="{StaticResource MovieCardTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>

            <Separator Margin="30,0" Background="{StaticResource MaterialDesignLightSeparatorBackground}"/>

            <!-- Featured Movies Section -->
            <StackPanel Margin="30,30,30,30">
                <TextBlock Text="⭐ Phim Nổi Bật"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,15"/>

                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding FeaturedMovies}"
                                  ItemTemplate="{StaticResource MovieCardTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>

            <Separator Margin="30,0" Background="{StaticResource MaterialDesignLightSeparatorBackground}"/>

            <!-- Popular Movies Section -->
            <StackPanel Margin="30,30,30,30">
                <TextBlock Text="🔥 Phim Xem Nhiều"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,15"/>

                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding PopularMovies}"
                                  ItemTemplate="{StaticResource MovieCardTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>

            <Separator Margin="30,0" Background="{StaticResource MaterialDesignLightSeparatorBackground}"/>

            <!-- Recommended Movies Section -->
            <StackPanel Margin="30,30,30,30">
                <TextBlock Text="💡 Phim Đề Xuất Cho Bạn"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,15"/>

                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding RecommendedMovies}"
                                  ItemTemplate="{StaticResource MovieCardTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>

            <!-- Footer -->
            <Border Height="60" 
                    Background="{StaticResource BackgroundDarkBrush}"
                    Margin="0,30,0,0">
                <TextBlock Text="© 2026 MuVi - Movie Viewing Application"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource TextSecondaryBrush}"/>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
