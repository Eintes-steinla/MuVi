<UserControl x:Class="MuVi.Views.UserHomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Movie Card Template -->
        <DataTemplate x:Key="MovieCardTemplate">
            <Border Width="180" Height="280" Margin="10"
                    Background="{StaticResource BackgroundGradientBrush}"
                    CornerRadius="8"
                    Cursor="Hand">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Poster -->
                    <Border Grid.Row="0" CornerRadius="8,8,0,0" ClipToBounds="True">
                        <Image Source="{Binding PosterPath}" 
                               Stretch="UniformToFill"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>

                    <!-- Info Overlay -->
                    <Grid Grid.Row="0" VerticalAlignment="Bottom" 
                          Background="#CC000000" Height="60">
                        <StackPanel Margin="10,5">
                            <TextBlock Text="{Binding Title}" 
                                       Foreground="White"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       TextTrimming="CharacterEllipsis"
                                       MaxHeight="36"
                                       TextWrapping="Wrap"/>
                            <StackPanel Orientation="Horizontal" 
                                        Margin="0,5,0,0" 
                                        VerticalAlignment="Center">
                                <Image Source="/Assets/Icons/icons8-star-48.png" 
                                       Height="10" Width="10"
                                       Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding AverageRating, StringFormat={}{0:F1}}" 
                                           Foreground="#FFD700"
                                           FontSize="10"
                                           FontWeight="Bold"/>
                                <Image Source="/Assets/Icons/icons8-eye-gray-48.png" 
                                       Height="13" Width="13"
                                       Margin="15,0,5,0"/>
                                <TextBlock Text="{Binding ViewCount, StringFormat={}{0}}" 
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="10"
                                           Margin="0,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <!-- Action Buttons -->
                    <Grid Grid.Row="1" Background="{StaticResource BackgroundDarkBrush}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding DataContext.PlayMovieCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Margin="10,5,5,5"
                                ToolTip="Xem">
                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"
                                        Margin="10,5">
                                <Image Source="/Assets/Icons/icons8-play-48.png"
                                       Width="20" Height="20"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="1"
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding DataContext.ViewMovieDetailCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Margin="5,5,10,5"
                                ToolTip="Chi tiết">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Image Source="/Assets/Icons/icons8-info-white-48.png"
                                       Width="20" Height="20"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  Background="{StaticResource BackgroundGradientBrush}">
        <StackPanel>
            <!-- Featured Section -->
            <Grid x:Name="FeaturedSection" Margin="0,0,0,40">
                <Border Height="400"
                                CornerRadius="16"
                                Background="{StaticResource BackgroundLightBrush}">
                    <Border.Effect>
                        <DropShadowEffect Color="{StaticResource PrimaryPurple}" 
                                                BlurRadius="40" 
                                                ShadowDepth="0" 
                                                Opacity="0.3"/>
                    </Border.Effect>
                    <Grid>
                        <!-- Featured Movie Background -->
                        <Image Source="https://i.pinimg.com/1200x/bd/e3/90/bde3904a0af0711287025bfc43b9cb56.jpg"
                                     Stretch="UniformToFill"
                                     Opacity="1"/>

                        <!-- Gradient Overlay -->
                        <Border>
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="Transparent" Offset="0"/>
                                    <GradientStop Color="#0F0F0F" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>

                        <!-- Featured Movie Info -->
                        <StackPanel VerticalAlignment="Bottom" 
                                          Margin="40,0,40,40">
                            <TextBlock x:Name="txtFeaturedTitle"
                                             Text="Học Viện Siêu Anh Hùng"
                                             Foreground="White"
                                             FontSize="42"
                                             FontWeight="Bold"
                                             Margin="0,0,0,10"/>

                            <StackPanel>

                            </StackPanel>

                            <TextBlock x:Name="txtFeaturedDesc"
                                             Text="Đây là câu chuyện về Midoriya Izuku (Deku)"
                                             Foreground="{StaticResource TextSecondaryBrush}"
                                             FontSize="16"
                                             TextWrapping="Wrap"
                                             MaxWidth="700"
                                             HorizontalAlignment="Left"
                                             Margin="0,0,0,20"/>
                            <StackPanel Orientation="Horizontal">
                                <Button
                                              Style="{StaticResource PrimaryButton}"
                                              Command="{Binding DataContext.PlayMovieCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                              Margin="0,0,20,0">
                                    <Image Source="/Assets/Icons/icons8-play-48.png" Width="20" Margin="5" />
                                </Button>

                                <Button
                                              Style="{StaticResource SecondaryButton}"
                                              Margin="0,0,10,0">
                                    <Image Source="/Assets/Icons/icons8-heart-48.png" Width="20" Margin="5" />
                                </Button>

                                <Button
                                              Style="{StaticResource SecondaryButton}"
                                              Command="{Binding DataContext.ViewMovieDetailCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              CommandParameter="{Binding}">
                                    <Image Source="/Assets/Icons/icons8-info-48.png" Width="20" Margin="5" />
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Loading Indicator -->
            <ProgressBar IsIndeterminate="{Binding IsLoading}"
                         Height="3"
                         Margin="0,-20,0,20"
                         Foreground="{StaticResource MaterialDesignLightSeparatorBackground}"/>

            <!-- New Movies Section -->
            <StackPanel Margin="30,0,30,30">
                <StackPanel Margin="0,0,0,20"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Image Source="/Assets/Icons/icons8-movie-48.png" 
                           Width="35" Height="35" 
                           Margin="0,0,10,0"/>
                    <TextBlock Text="Phim Mới Cập Nhật"
                           FontSize="25"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           />
                </StackPanel>

                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding NewMovies}"
                                  ItemTemplate="{StaticResource MovieCardTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>

            <Separator Margin="30,0" Background="{StaticResource MaterialDesignLightSeparatorBackground}"/>

            <!-- Featured Movies Section -->
            <StackPanel Margin="30,30,30,30">
                <StackPanel Margin="0,0,0,20"
            Orientation="Horizontal"
            VerticalAlignment="Center">
                    <Image Source="/Assets/Icons/icons8-star-48.png" 
           Width="30" Height="30" 
           Margin="0,0,10,0"/>
                    <TextBlock Text="Phim Nổi Bật"
           FontSize="25"
           FontWeight="Bold"
           Foreground="{StaticResource TextPrimaryBrush}"
           />
                </StackPanel>

                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding FeaturedMovies}"
                                  ItemTemplate="{StaticResource MovieCardTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>

            <Separator Margin="30,0" Background="{StaticResource MaterialDesignLightSeparatorBackground}"/>

            <!-- Popular Movies Section -->
            <StackPanel Margin="30,30,30,30">
                <StackPanel Margin="0,0,0,20"
 Orientation="Horizontal"
 VerticalAlignment="Center">
                    <Image Source="/Assets/Icons/icons8-fire-48.png" 
Width="30" Height="30" 
Margin="0,0,10,0"/>
                    <TextBlock Text="Phim Xem Nhiều"
FontSize="25"
FontWeight="Bold"
Foreground="{StaticResource TextPrimaryBrush}"
/>
                </StackPanel>

                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding PopularMovies}"
                                  ItemTemplate="{StaticResource MovieCardTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>

            <Separator Margin="30,0" Background="{StaticResource MaterialDesignLightSeparatorBackground}"/>

            <!-- Recommended Movies Section -->
            <StackPanel Margin="30,30,30,30">
                <StackPanel Margin="0,0,0,20"
 Orientation="Horizontal"
 VerticalAlignment="Center">
                    <Image Source="/Assets/Icons/icons8-light-48.png" 
Width="30" Height="30" 
Margin="0,0,10,0"/>
                    <TextBlock Text="Phim Đề Xuất Cho Bạn"
FontSize="25"
FontWeight="Bold"
Foreground="{StaticResource TextPrimaryBrush}"
/>
                </StackPanel>

                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding RecommendedMovies}"
                                  ItemTemplate="{StaticResource MovieCardTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
